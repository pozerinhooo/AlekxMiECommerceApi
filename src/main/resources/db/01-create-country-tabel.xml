<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">
    <changeSet id="01-create-country-table" author="matrasj">
        <createTable tableName="country">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar">
                <constraints nullable="false"/>
            </column>

            <column name="code" type="varchar">
                <constraints nullable="false"/>
            </column>

            <column name="removed" type="boolean" defaultValueBoolean="false">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <insert tableName="country">
            <column name="name">Polska</column>
            <column name="code">POL</column>
        </insert>

        <insert tableName="country">
            <column name="name">Niemcy</column>
            <column name="code">DEU</column>
        </insert>

        <insert tableName="country">
            <column name="name">Francja</column>
            <column name="code">FRA</column>
        </insert>

        <insert tableName="country">
            <column name="name">Hiszpania</column>
            <column name="code">ESP</column>
        </insert>

        <insert tableName="country">
            <column name="name">Portugalia</column>
            <column name="code">PRT</column>
        </insert>

        <insert tableName="country">
            <column name="name">Wielka Brytania</column>
            <column name="code">GBR</column>
        </insert>
    </changeSet>
</databaseChangeLog>