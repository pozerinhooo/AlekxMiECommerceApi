<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">
    <changeSet id="09-create-product-item-table" author="matrasj">
        <createTable tableName="product_item">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>

            <column name="sku_code" type="varchar">
                <constraints nullable="false"/>
            </column>

            <column name="quantity_in_stock" type="bigint">
                <constraints nullable="true"/>
            </column>

            <column name="price" type="numeric(8,2)" >
                <constraints nullable="true"/>
            </column>

            <column name="removed" type="boolean" defaultValueBoolean="false">
                <constraints nullable="true"/>
            </column>

            <column name="created_at" type="timestamp without time zone">
                <constraints nullable="false"/>
            </column>

            <column name="last_updated" type="timestamp without time zone">
                <constraints nullable="true"/>
            </column>

            <column name="product_id" type="bigint">
                <constraints referencedColumnNames="id" referencedTableName="product"
                foreignKeyName="product_item_product_fk"/>
            </column>
        </createTable>

        <insert tableName="product_item">
            <column name="sku_code">ALEXMI_WARRIOR_BEAR_1</column>
            <column name="quantity_in_stock">1</column>
            <column name="price">79.99</column>
            <column name="created_at">2023-04-12 17:32:41.728254 +00:00</column>
            <column name="product_id">1</column>
        </insert>


    </changeSet>
</databaseChangeLog>