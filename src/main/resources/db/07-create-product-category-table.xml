<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">
    <changeSet id="07-create-product-category-table" author="matrasj">
        <createTable tableName="product_category">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>

            <column name="name" type="varchar">
                <constraints nullable="false"/>
            </column>

            <column name="removed" type="boolean" defaultValueBoolean="false">
                <constraints nullable="true"/>
            </column>

            <column name="created_at" type="timestamp without time zone">
                <constraints nullable="false"/>
            </column>

            <column name="last_updated" type="timestamp without time zone">
                <constraints nullable="true"/>
            </column>

            <column name="parent_category_id" type="bigint">
                <constraints referencedColumnNames="id" referencedTableName="product_category"
                foreignKeyName="product_category_parent_product_category_fk"/>
            </column>
        </createTable>

        <insert tableName="product_category">
            <column name="name">T-shirt</column>
            <column name="created_at">2023-04-12 17:32:41.728254 +00:00</column>
        </insert>
    </changeSet>
</databaseChangeLog>