<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">
    <changeSet id="13-create-product-configuration-table" author="matrasj">
        <createTable tableName="product_configuration">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>

            <column name="product_item_id" type="bigint">
                <constraints referencedColumnNames="id" referencedTableName="product_item"
                foreignKeyName="product_configuration_product_item_fk"/>
            </column>

            <column name="product_variation_option_id" type="bigint">
                <constraints referencedColumnNames="id" referencedTableName="product_variation_option"
                             foreignKeyName="product_configuration_product_variation_option_fk"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>